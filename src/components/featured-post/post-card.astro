---
import PostCardImg from "../../assets/Images/postcardimg.jpg"

---

<div class="post-card">
    <div class="image">
        <img src={PostCardImg} alt="">
    </div>
    <div class="content">
        <p class="top-title">Startup</p>
        <h2 class="title">
            <a href="/blog-post">Design tips for designers that cover everything you need</a>
        </h2>
        <p class="text">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident.</p>
    </div>
</div>

<style lang="scss">
    @import "../../assets/styles/variables.scss";
    .post-card{
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 32px;
        .title{
            &:hover a{
                transition: 0.3s;
                color: $accent;
            }
        }
        .image{
            width: 100%;
            max-width: 490px;
            height: 318px;
            img{
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }
        .content{
            .title{
                margin: 20px 0 16px;
            }
        }
    }
</style>