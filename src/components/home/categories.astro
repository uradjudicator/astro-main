<!-- style -->
<style lang="scss">
    @import "../../assets/styles/variables.scss";
    .categories{
        padding-bottom: 128px;
        .title{
            text-align: center;
            margin-bottom: 48px;
        }
        .wrapper{
            display: flex;
            justify-content: space-between;
            .card{
                width: 296px;
                padding: 32px;
                border: 1px solid rgba($gray-400,$alpha:0.3);
                &:hover{
                    transition: 0.5;
                    background-color: $primary;
                    cursor: pointer;
